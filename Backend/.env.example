# ========== Server Configuration ==========
NODE_ENV=production
PORT=5000

# ========== Database ==========
# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@your-cluster.mongodb.net/agroconnect

# ========== Firebase Admin SDK ==========
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email@iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n

# ========== Frontend URL (CORS) ==========
# Update with your actual Vercel/hosting frontend URL
FRONTEND_URL=https://your-frontend-url.com

# ========== ML Model Service (External) ==========
# Render-hosted ML model service - UPDATE AFTER DEPLOYMENT
ML_API_URL=https://agroconnect-ml-model.onrender.com
# Legacy env variable name (also supported)
PYTHON_API_URL=https://agroconnect-ml-model.onrender.com

# ========== AI APIs ==========
OPENAI_API_KEY=sk-proj-your_openai_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ========== File Upload ==========
MAX_FILE_SIZE=5242880  # 5MB in bytes

# ========== JWT ==========
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# ========== Logging ==========
LOG_LEVEL=info
